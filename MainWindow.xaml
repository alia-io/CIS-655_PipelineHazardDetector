<Window x:Class="PipelineHazardDetector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PipelineHazardDetector"
        mc:Ignorable="d"
        Title="Pipeline Display and Hazard Detector" Height="600" Width="900">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="150" Width="580" Margin="20,400,0,0" TextWrapping="Wrap" Text="Type instruction sequence here..." VerticalAlignment="Top"  RenderTransformOrigin="0.512,1.415" FontSize="18"/>
        <Button Content="Display With Hazards" HorizontalAlignment="Left" Margin="630,420,0,0" VerticalAlignment="Top" Width="240" Height="30" FontSize="18" Click="OnClick"/>
        <Button Content="Display Without Forwarding" HorizontalAlignment="Left" Margin="630,460,0,0" VerticalAlignment="Top" Width="240" Height="30" FontSize="18" Click="OnClick"/>
        <Button Content="Display With Forwarding" HorizontalAlignment="Left" Margin="630,500,0,0" VerticalAlignment="Top" Width="240" Height="30" FontSize="18" Click="OnClick"/>
    </Grid>
</Window>